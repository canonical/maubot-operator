{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "description": "Update base image references",
      "fileMatch": [
        "(^|/)rockcraft.yaml$"
      ],
      "matchStrings": [
        "# renovate: build-base:\\s+(?<depName>[^:]*):(?<currentValue>[^\\s@]*)(@(?<currentDigest>sha256:[0-9a-f]*))?",
        "# renovate: base:\\s+(?<depName>[^:]*):(?<currentValue>[^\\s@]*)(@(?<currentDigest>sha256:[0-9a-f]*))?"
      ],
      "matchStringsStrategy": "any",
      "versioningTemplate": "ubuntu"
    },
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "maubot/maubot",
      "description": "Update Maubot workload",
      "fileMatch": [
        "(^|/)rockcraft.yaml$"
      ],
      "matchStrings": [
        "maubot==(?<currentValue>.+)",
        "version: (?<currentValue>.+)"
      ],
      "matchStringsStrategy": "any",
      "versioningTemplate": "semver-coerced"
    },
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "prometheus/blackbox_exporter",
      "description": "Update Blackbox",
      "fileMatch": [
        "(^|/)rockcraft.yaml$"
      ],
      "matchStrings": [
        "v(?<currentValue>.+)/blackbox_exporter",
        "blackbox_exporter-(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "matchStringsStrategy": "any",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
